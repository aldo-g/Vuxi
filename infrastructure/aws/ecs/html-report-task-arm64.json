{
    "family": "html-report-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::907929922976:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::907929922976:role/ecsTaskRole",
    "containerDefinitions": [
      {
        "name": "html-report-container",
        "image": "907929922976.dkr.ecr.eu-west-1.amazonaws.com/html-report-service:arm64-latest",
        "essential": true,
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/html-report-task",
            "awslogs-region": "eu-west-1",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "environment": [
          {
            "name": "ENVIRONMENT",
            "value": "aws"
          },
          {
            "name": "S3_BUCKET",
            "value": "website-analyzer-data"
          },
          {
            "name": "AWS_REGION",
            "value": "eu-west-1"
          }
        ],
        "command": [
          "npm", 
          "start", 
          "--", 
          "--input", 
          "/app/data/analysis/structured-analysis.json", 
          "--screenshots", 
          "/app/data/screenshots", 
          "--output", 
          "/app/data/reports"
        ]
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024",
    "runtimePlatform": {
      "cpuArchitecture": "ARM64",
      "operatingSystemFamily": "LINUX"
    }
  }